#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
		int n;
		cin>>n;
		//int a[100];
		for(int i=1;i<n-2;i+=2){
			cout<<i+1<<" "<<i<<"\n";
			
		}
		if(n%2==0)
			cout<<n<<" "<<n-1<<"\n";
		else
			cout<<n<<" "<<n-2<<" "<<n-1<<"\n";
	}
	return 0;
}
